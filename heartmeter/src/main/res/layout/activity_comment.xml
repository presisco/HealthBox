<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heartmeter.UI.Activity.CommentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/label_comment" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBad"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_mood_bad" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:elevation="0dp" />

            <ImageView
                android:id="@+id/imageGood"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:drawable="@drawable/ic_mood_good"
                android:src="@drawable/ic_mood_good" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
